              <a onclick="findSpecific(this)">NBA Chicago Bulls Gametime hoodie in reverse french terry</a>
            </div>
          </div>
    </div>
    <button id="login" class="btn btn-primary"><i class="fa fa-user-circle" style="font-size:24px;color:white"></i></button>
    <button id="logout" class="btn btn-primary">Log out</button>
    <button id="contactus" class="btn btn-primary">Contact Us</button>
    <button id="checkout" class="btn btn-primary"><i class="fa fa-shopping-basket" style="font-size:24px;color:white"></i></button>
    <button id="settings" class="btn btn-primary"><i class="fa fa-cog" style="font-size: 24px;color: white"></i></button>
  </div>
    {{# if products}}
    <div id="bask" class='cart'>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="list-group">
                    <div class="list-group-item border">
                            <h3>My Basket</h3>
                            <hr>
                            {{# each products }}
                            <span class="remove" onclick="clickRemove('{{this.id}}','{{this.qty}}')"><i class="fa fa-times fa-2x"></i></span>
                            <div id="smaller">
                                <img class="images" src="data:image/jpeg;base64,{{this.image}}">
                            </div>
                            <div id="name">{{ this.item }}</div>
                            <div id="size"><strong>Size:</strong>{{ this.size }}</div>
                            <span id="price" class="badge price-cart" style="color:red;font:bold;font-size: 20px;"><strong>€{{ this.price }}</strong></span>
                            <span id="quantity" class="total"><strong>Quantity:</strong>{{ this.qty }}</span>
                            <hr><br><br>
                            {{/each}}
                        </div>
                </div>
        </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div id="subtotal1" class="col-md-8">
                    <strong>SUB-TOTAL: € {{ totalPrice }}</strong>
                </div>
            </div>
        </div>
    </div>
        <div id="checking" class="row">
            <div class="col-md-2"></div>
                <div class="col-md-8">
                    <div class="list-group">
                        <div class="list-group-item border">
                            <h4>TOTAL</h4>
                            <hr>
                            <strong>SUB-TOTAL:</strong> € {{ totalPrice }}<br>
                            <div id="fee"><strong>Delivery Fee:</strong>€4</div>
                            <hr>
                            <a id="checkout_btn"class="btn btn-raised  btn-success">Checkout</a><br>
                            <strong>WE ACCEPT:</strong>
                            <img id="smaller2" src="https://assets.asosservices.com/asos-finance/images/marketing/single.png">
                        </div>
                    </div>
                </div>
        </div>
    {{else}}
        <div id="checking2" class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 main">
                <h3>There are no Items in your Basket</h3>
                <p>To Add Items, use the searchbar to search for the clothes you want</p>
            </div>
        </div>
    {{/if}}

    <div class="modal fade" id="errorAlert" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="alert alert-danger" role="alert">
                <strong>Oh No!</strong> Username and password are Fraudulent!
            </div>
        </div>
    </div>
</div>
<script src="/assets/js/basket.js"></script>
</body>
</html>
